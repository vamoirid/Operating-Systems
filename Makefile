SHELL := /bin/bash

# ------------------------------------------------------------------------------
# COMMANDS
# ------------------------------------------------------------------------------
CC = gcc
RM = rm -f

# ------------------------------------------------------------------------------
# DIRECTORIES
# ------------------------------------------------------------------------------
SRC = src
BIN = bin

# ------------------------------------------------------------------------------
# TARGETS
# ------------------------------------------------------------------------------

all: myshell

# final link for executable
myshell: myshell.o
	$(CC) $^ -o $(BIN)/$@

# generate objects
%.o: $(SRC)/%.c
	$(CC) -c $<

# clean temporary files
clean:
	$(RM) $(SRC)/*~ *.o *~

# remove executable
purge: clean
	$(RM) $(BIN)/myshell